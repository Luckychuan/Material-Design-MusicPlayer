<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    android:layout_height="65dp">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/popup_menu"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/current_music_list_item_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="16dp"
            android:text="@string/test"
            android:textColor="@color/textView"/>
        <TextView
            android:id="@+id/current_music_list_item_textViewSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="13dp"
            android:text="@string/test"
            android:textColor="@color/textView"/>


    </LinearLayout>

    <ImageButton
        android:id="@+id/popup_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/popup_menu_ripple"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/listview_line"
        />

</RelativeLayout>