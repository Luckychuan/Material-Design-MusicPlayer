<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <TextView
        android:layout_marginTop="12dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="常用播放列表"
        android:textSize="17dp"
        android:textColor="@color/textView"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/latest_play_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/latest_play_layout"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/album_latest_play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/play_page_default_cover" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/latest_play_textView"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        android:text="最近播放"
                        android:textColor="@color/textView"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/textView_small1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="@string/test"
                        android:textColor="@color/textView_small"
                        android:textSize="11dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/most_play_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/most_play_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/album_most_play"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/play_page_default_cover"
                    />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/most_play_textView"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        android:text="最常播放"
                        android:textColor="@color/textView"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/textView_small2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="@string/test"
                        android:textColor="@color/textView_small"
                        android:textSize="11dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/favorite_card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="3dp">

            <LinearLayout
                android:id="@+id/favorite_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/album_favorite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitStart"
                    android:src="@drawable/play_page_default_cover" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/favorite_textView"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingLeft="10dp"
                        android:text="我的最爱"
                        android:textColor="@color/textView"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/textView_small3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="@string/test"
                        android:textColor="@color/textView_small"
                        android:textSize="11dp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>



    </LinearLayout>
    <TextView
        android:layout_marginTop="15dp"
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="所有播放列表"
        android:textSize="17dp"
        android:textColor="@color/textView"
        />

</LinearLayout>