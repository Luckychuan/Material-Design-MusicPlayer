<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/music_in_album_item_layout"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/music_in_album_item_position"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/test"
        android:textColor="@color/textView"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/music_in_album_item_textView"
        android:layout_toRightOf="@+id/music_in_album_item_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_centerVertical="true"
        android:text="@string/test"
        android:textColor="@color/textView"
        android:textSize="16dp" />

    <ImageButton
        android:id="@+id/popup_menu"
        android:layout_centerVertical="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
  android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/popup_menu_ripple" />

</RelativeLayout>